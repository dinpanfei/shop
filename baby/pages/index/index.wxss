/**index.wxss**/
page
{
      font-family: 微软雅黑;
  
     background: #ccc;
}
.module-box{
width:100%;
height: 346rpx;
border: 1px solid #ccc;
margin:0;
padding: 0;
}
.module-box image{
    width: 100%;
    height: 100%;
}
.item-left
{
 width: 44%;
 height: 100%;
 float: left;
 margin: 0;
}
.item-right
{
 width: 419rpx;
 height: 100%;
 float: right; 
 margin: 0;
}
.right-top
{
    width: 100%;
    height: 140rpx;
}
.right-bottom
{
    width: 100%;
    height: 202rpx;
   border-top:1px solid #ccc;
}
.right-bottom-left
{
    width:49%;
     height: 100%;
     float: left;
}
.right-bottom-right
{
    width:50%;
    height: 100%;
    float: left;
    border-left:1px solid #ccc;
}
/*水平滚动条*/
.navbar-box
{
  width: 100%;
 font-family: 微软雅黑;
}
.scroll-view_H
{
 border-bottom: 1rpx solid rgba(255, 255, 255, 0.7);  
 white-space:nowrap;
 background-color: rgba(255, 255, 255, 0.7);
 display: block;
 width:100%;
 height: 40px;
 text-align: center;  
 line-height: 31px;
}
/*不显示滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.curNavigator{ 
    font-size: 30rpx;  
    display: inline-block;  
    width: 20%;  
    color: #777777;
}
.on{ 
    color: #0099ff;
    border-bottom: 4px solid #0099FF;
    transition: 0.5s;
    } 
.navbar-list
{
    font-size: 30rpx;  
    display: inline-block;  
    width: 20%;  
    height: 28px;
    margin:12rpx;  
    padding: 2px;
}
/*商品展示列表*/
.navigator
{
    width:100%;
    background: #ccc;
}
.commodity-list
{
 width:100%;
 background: #fff;
 margin-bottom:20px;
}
.commodity-list image
{
  width: 100%;
  height: 280px;  
}
.commodity-text
{
  
   height:250rpx;
   line-height:55rpx;
